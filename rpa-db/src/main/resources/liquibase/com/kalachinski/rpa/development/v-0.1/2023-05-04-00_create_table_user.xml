<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="2023-05-04-00" author="Yury Kalachinski">
        <comment>Creating table: user</comment>

        <createTable tableName="user" schemaName="main">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" primaryKeyName="pk_user"/>
            </column>
            <column name="email" type="varchar(64)">
                <constraints uniqueConstraintName="UCN_user_email"
                             unique="true"/>
            </column>
            <column name="first_name" type="varchar(64)"/>
            <column name="last_name" type="varchar(64)"/>
            <column name="role_id" type="bigint"/>
            <column name="status" type="varchar(32)">
                <constraints nullable="false"/>
            </column>
            <column name="first_login_date" type="timestamp"/>
            <column name="is_web_user" type="boolean"/>
            <column name="password" type="varchar(255)"/>
            <column name="is_telegram_user" type="boolean"/>
            <column name="telegram_user_id" type="bigint">
                <constraints uniqueConstraintName="UCN_telegram_user_id"
                             unique="true"/>
            </column>
            <column name="user_name" type="varchar(64)"/>
        </createTable>

    </changeSet>

</databaseChangeLog>
