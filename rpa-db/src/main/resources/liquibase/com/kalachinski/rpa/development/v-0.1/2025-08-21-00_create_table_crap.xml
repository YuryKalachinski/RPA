<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="2025-08-21-00" author="Yury Kalachinski">
        <comment>Creating table: crap</comment>

        <createTable tableName="crap" schemaName="main">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" primaryKeyName="pk_crap"/>
            </column>
            <column name="name" type="varchar(64)"/>
            <column name="net_name" type="varchar(64)">
                <constraints nullable="false"
                             unique="true"/>
            </column>
            <column name="substation_id" type="bigint"/>
            <column name="host" type="varchar(64)">
                <constraints nullable="false"
                             unique="true"/>
            </column>
            <column name="port" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="is_active" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="is_available" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="last_success_check" type="timestamp"/>

        </createTable>
    </changeSet>

    <changeSet id="2025-08-21-01" author="Yury Kalachinski">
        <comment>Add foreign key: substation_id</comment>

        <addForeignKeyConstraint baseTableSchemaName="main"
                                 baseTableName="crap"
                                 baseColumnNames="substation_id"
                                 constraintName="fk_substation_crap"
                                 referencedTableSchemaName="main"
                                 referencedTableName="substation"
                                 referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>
